{
  "name": "custom_api",
  "version": "0.1.0",
  "description": "Node.js express apps with TypeScript",
  "author": "lee chang min",
  "scripts": {
    "build-sass": "sass src/public/css/main.scss dist/public/css/main.css",
    "build-ts": "tsc",
    "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect dist/server.js",
    "start": "node dist/server.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-sass": "sass --watch src/public/css/main.scss dist/public/css/main.css",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "dependencies": {
    "async": "3.2.2",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "dotenv": "^16.4.1",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-flash": "^0.0.2",
    "express-session": "^1.18.0",
    "express-validator": "^7.0.1",
    "fbgraph": "1.4.4",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.1.1",
    "nodemailer": "^6.9.9",
    "passport": "^0.7.0",
    "passport-facebook": "3.0.0",
    "passport-local": "^1.0.0",
    "pug": "^3.0.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/async": "3.2.5",
    "@types/bcrypt-nodejs": "^0.0.31",
    "@types/body-parser": "1.19.0",
    "@types/chai": "4.2.14",
    "@types/compression": "^1.7.5",
    "@types/errorhandler": "^1.5.3",
    "@types/eslint": "^8.56.2",
    "@types/express": "^4.17.21",
    "@types/express-flash": "^0.0.5",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.12",
    "@types/jquery": "3.5.5",
    "@types/lodash": "^4.14.170",
    "@types/node": "^20.11.16",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "1.0.5",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-local": "^1.0.38",
    "@types/pug": "^2.0.10",
    "@types/request": "^2.48.12",
    "@types/request-promise": "^4.1.51",
    "@types/shelljs": "0.8.8",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "chai": "4.3.0",
    "concurrently": "6.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "sass": "1.32.6",
    "shelljs": "0.8.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
