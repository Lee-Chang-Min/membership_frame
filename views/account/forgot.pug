extends ../layout

block content
  .col-sm-8.offset-sm-2
    form(method='POST')
      legend 비밀번호 재설정
      hr
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        p Enter your email address below and we will send you password reset instructions.
        label.col-form-label.font-weight-bold(for='email') 이메일
        input.form-control(type='email', name='email', id='email', placeholder='이메일', autofocus, required)
      .form-group
        button.btn.btn-primary(type='submit')
          i.fa.fa-key
          | Reset Password
