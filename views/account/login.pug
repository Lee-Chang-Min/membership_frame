extends ../layout

block content
  style.
    .header-container {
      display: flex;
      align-items: center; /* 세로 중앙 정렬 */
      justify-content: center; /* 가로 중앙 정렬 */
    }
    .header-container h3 {
      font-family: "Dongle", sans-serif;
      margin-left: 10px; /* 텍스트와 이미지 사이 간격 */
      margin-top: 18px;
    }

  .container 
    .row.justify-content-center  
      .col-lg-4  
        .page-header.text-center
          .header-container
            img(src="/images/a2c.jpg", alt="Climbing", style="width: 50px; height: 50px; border-radius: 7px; ")
            h3 All About Climbing
          hr
        form.form-horizontal(method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .form-group(style='margin-bottom: 8px;') 
            //label.col-form-label.text-right.font-weight-bold(for='email') 이메일
            input.form-control(type='email', name='email', id='email', placeholder='이메일', autofocus, required)
          .form-group(style='margin-bottom: 8px;') 
            //label.col-form-label.text-right.font-weight-bold(for='password') 비밀번호
            input.form-control(type='password', name='password', id='password', placeholder='비밀번호', required)
          .form-group.text-center
            button.btn.btn-primary(type='submit', style='width: 100%;')
              i.fa.fa-user
              | Login
          .form-group.text-center  
            a.btn.btn-link(href='/forgot', style='margin-right: 10px;') 비밀번호 재설정
            |  
            a.btn.btn-link(href='/user/signup') 회원가입


        
